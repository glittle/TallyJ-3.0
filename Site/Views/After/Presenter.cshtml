@using TallyJ.Code.Enumerations
@using TallyJ.Code.Session
@model ResultsModel
@{
  ViewBag.Title = "Election Results";
  ViewBag.Message = "Celebrate the election";
  var election = UserSession.CurrentElection;
  ContextItems.AddJavascriptForPage("pageUrl", "presenterPage.controllerUrl={0};".FilledWith(Url.Action("Index").QuotedForJavascript()));
}
@*<script src="@Url.Content("~/Scripts/highcharts/highcharts.js")"></script>
  <script src="@Url.Content("~/Scripts/highcharts/themes/dark-green.js")"></script>
*@
<div class="Main">
  <div class="Nav Show">
    <button id="btnReturn" type="button">Show Menu</button>
    <div>F11 (full-screen), Space(show), B(hide)</div>
    <button type="button" id="btnRefesh">Refresh</button>
  </div>
  <div id="Wait">
    <p>
      <span id="Status">@ElectionTallyStatusEnum.TextFor(UserSession.CurrentElection.TallyStatus)</span>
    </p>
    <p>
      The results will be available when the tellers finish their tallying and analysis.
    </p>
  </div>
  <div id="Results" class="Hidden">
    <h1>Tellers' Report</h1>
    <button type="button" id="btnShow" class="Ready">
      Display Report
    </button>
    <div id="chart">
    </div>
    <table class="Holder">
      <tr>
        <td class="HolderLeft">
          <table id="totalCounts">
            <thead>
              <tr>
                <th colspan="2">
                  Statistics
                </th>
              </tr>
            </thead>
            <tr>
              <td class="Left">
                Eligible to Vote
              </td>
              <td class="numberCell">
                <span data-name="NumEligibleToVote"></span>
              </td>
            </tr>
            <tr>
              <td class="Left">
                Number who Voted
              </td>
              <td class="numberCell">
                <span data-name="NumBallots"></span>
              </td>
            </tr>
            @if (!UserSession.CurrentElection.MaskVotingMethod.AsBoolean())
            {
              <tr class="Method">
                <td class="Left">
                  In Person
                  <span data-name="EnvelopesInPerson"></span>
                </td>
                <td class="numberCell"></td>
              </tr>
              <tr class="Method">
                <td class="Left">
                  Dropped Off
                  <span data-name="EnvelopesDroppedOff"></span>
                </td>
                <td class="numberCell"></td>
              </tr>

              <tr class="Method">
                <td class="Left">
                  Mailed In
                  <span data-name="EnvelopesMailedIn"></span>
                </td>
                <td class="numberCell"></td>
              </tr>
              <tr class="Method" id="calledIn">
                <td class="Left">
                  Called In
                  <span data-name="EnvelopesCalledIn"></span>
                </td>
                <td class="numberCell"></td>
              </tr>
              if (election.VotingMethodsContains("1"))
              {
                <tr class="Method">
                  <td class="Left">
                    @election.Custom1Name
                    <span data-name="EnvelopesCustom1"></span>
                  </td>
                  <td class="numberCell"></td>
                </tr>
              }
              if (election.VotingMethodsContains("2"))
              {
                <tr class="Method">
                  <td class="Left">
                    @election.Custom2Name
                    <span data-name="EnvelopesCustom2"></span>
                  </td>
                  <td class="numberCell"></td>
                </tr>
              }
              if (election.VotingMethodsContains("3"))
              {
                <tr class="Method">
                  <td class="Left">
                    @election.Custom3Name
                    <span data-name="EnvelopesCustom3"></span>
                  </td>
                  <td class="numberCell"></td>
                </tr>
              }

              if (election.VotingMethodsContains(VotingMethodEnum.Imported))
              {
                <tr class="Method">
                  <td class="Left">
                    @VotingMethodEnum.Imported.DisplayText
                    <span data-name="EnvelopesImported"></span>
                  </td>
                  <td class="numberCell"></td>
                </tr>
              }

              <tr class="Method" id="online">
                <td class="Left">
                  Online
                  <span data-name="EnvelopesOnline"></span>
                </td>
                <td class="numberCell"></td>
              </tr>
            }
            <tr>
              <td class="Left">
                Participation Rate
              </td>
              <td class="numberCell">
                <span data-name="Participation"></span>%
              </td>
            </tr>
            @if (!UserSession.CurrentElection.IsSingleNameElection)
            {
              <tr class="ExtraSpace">
                <td class="Left">
                  Spoiled Ballots
                </td>
                <td class="numberCell">
                  <span data-name="TotalInvalidBallots"></span>
                </td>
              </tr>
            }
            <tr>
              <td class="Left">
                Spoiled Votes
              </td>
              <td class="numberCell">
                <span data-name="TotalInvalidVotes"></span>
              </td>
            </tr>
          </table>
        </td>
        <td class="HolderRight">
          <button type="button" id="btnShowNames" class="Ready">
            Display Elected
          </button>
          <table id="mainResults" class="Main">
            <thead>
              <tr>
                <th>#</th>
                <th class="Left">
                  Elected
                </th>
                <th>
                  Votes
                </th>
              </tr>
            </thead>
            <tbody id="mainBody"></tbody>
          </table>
        </td>
      </tr>
    </table>
  </div>
</div>

<script type="text/x-template" id="mainBodyTemplate">
  <tr class="{ClassName}">
    <th>
      {Rank}
    </th>
    <td class="Left">
      {PersonName}
    </td>
    <td>
      {VoteDisplay}
    </td>
  </tr>
</script>