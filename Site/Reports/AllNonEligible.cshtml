@using TallyJ.Code.Session
@using TallyJ.Code
@using TallyJ.Code.Enumerations
@using TallyJ.EF
@inherits RazorEngine.Templating.TemplateBase
@{
  var people = new PersonCacher().AllForThisElection
    .Where(p => !p.CanVote.GetValueOrDefault() || !p.CanReceiveVotes.GetValueOrDefault())
    .OrderBy(p => p.FullName)
    .Select(p => new
    {
      PersonName = p.FullName,
      p.CanReceiveVotes,
      p.CanVote,
      InvalidReasonDesc = IneligibleReasonEnum.DescriptionFor(p.IneligibleReasonGuid.AsGuid())
    });
  var initial = ' ';
}
<style>
  b {
    display: inline-block;
  }

  .name {
    text-align: left;
    width: 40%;
  }

    .person.ineligible {
      text-decoration: line-through;
      color: red;
    }

  .vote {
    padding: 0 3px;
    text-align: center;
  }

  .method {
    text-align: left;
    white-space: nowrap;
  }
</style>
<div class="body">
  <h1 id="title"></h1>
  <p class="Comment">
    Showing all who cannot vote and all who cannot be voted for in this election.
  </p>
  <table class="Voters">
    <tr class="person header">
      <th class="name">Person</th>
      <th class="vote">Can Vote</th>
      <th class="vote">Can Receive Votes</th>
      <th class="method">Reason</th>
    </tr>

    @foreach (var person in people)
    {
      var name = person.PersonName;
      var first = name.ToUpper()[0];
      var firstClass = "";
      if (first != initial)
      {
        initial = first;
        name = "<b>" + initial + "</b>" + name.Substring(1);
        firstClass = "first";
      }
      //      var ineligible = "";
      //      if (person.InvalidReasonDesc.HasContent())
      //      {
      //        ineligible = "ineligible";
      //        name += "<span class=reason>{0}</span>".FilledWith(person.InvalidReasonDesc);
      //      }

      <tr class="person @firstClass">
        <td class="name">@Raw(name)</td>
        <td class="vote">@Raw(person.CanVote.GetValueOrDefault() ? "Y" : "-")</td>
        <td class="vote">@Raw(person.CanReceiveVotes.GetValueOrDefault() ? "Y" : "-")</td>
        <td class="method">@person.InvalidReasonDesc</td>
      </tr>
    }
  </table>
</div>